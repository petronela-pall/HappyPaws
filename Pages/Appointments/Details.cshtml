@page
@model HappyPaws.Pages.Appointments.DetailsModel
@{ ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container pt-4 pb-2 row">
    <div class="col-6">
        <h2 class="py-2">Appointment Details</h2>
    </div>
    <div class="col-3 offset-3 text-right py-2">
        <a asp-page="../Appointments/History" asp-route-petId="@Model.MedicalServiceHeader.PetId" class="btn btn-dark form-control">Back to Medical History Page</a>
    </div>
</div>

<div class="container" style="background-color:black">
    <div class="card">
        <div class="card-header bg-dark text-light ml-0 row container">
            <div class="col-1 text-center pt-3 text-white-50">
                <i class="far fa-user fa-2x"></i>
            </div>
            <div class="col-5">
                <label class="text-light">@Model.MedicalServiceHeader.Pet.ApplicationUser.Name</label><br />
                <label class="text-light">@Model.MedicalServiceHeader.Pet.ApplicationUser.Email</label><br />
                <label class="text-light">@Model.MedicalServiceHeader.Pet.ApplicationUser.PhoneNumber</label><br />
            </div>

            <div class="col-5 text-right">
                <label class="text-light">@Model.MedicalServiceHeader.Pet.Name</label><br />
                <label class="text-light">@Model.MedicalServiceHeader.Pet.Breed</label><br />
                <label class="text-light">@Model.MedicalServiceHeader.Pet.DateOfBirth</label><br />
            </div>
            <div class="col-1 text-right pt-3 text-white-50">
                <i class="fas fa-dog fa-2x"></i>
            </div>

        </div>
        <div class="card-body">
            
                <div class="row pt-3">
                 <br />
                    <div class="col-7">
                        <table class="table table-striped border">
                             <tr class="table-secondary">
                                 <th>
                                     @Html.DisplayNameFor(m => Model.AppointmentDetails[0].MedicalServiceName)
                                 </th>
                                 <th>
                                     @Html.DisplayNameFor(m => Model.AppointmentDetails[0].MedicalServicePrice)
                                 </th>
                                 
                            </tr>
                         @foreach (var item in Model.AppointmentDetails)
                         {
                             <tr>
                                 <td>
                                     @Html.DisplayFor(m => item.MedicalServiceName)
                                 </td>
                                 <td>
                                     @Html.DisplayFor(m => item.MedicalServicePrice)
                                 </td>
                                 
                             </tr>
                         }
                             <tr style="background-color:#e2fee2">
                                 <td colspan="1">
                                     <h6 class="text-dark">Total Price :</h6>
                                 </td>
                                 <td colspan="2">
                                     <h6 class="text-dark">$@Model.MedicalServiceHeader.TotalPrice</h6>
                                 </td>
                             </tr>

                        </table>

                        <div class="col-12">
                            <div class="row py-2">
                                <div class="col-12">
                                    <textarea placeholder="Comments" readonly asp-for="MedicalServiceHeader.Details" class="form-control" style="height:100px">

                                    </textarea>
                                </div>
                            </div>
                        </div>

                </div>
         </div>
    </div>
</div>