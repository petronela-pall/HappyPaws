@page
@model HappyPaws.Pages.Pets.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create New</h2>
<br />
<form method="post">
    <div class="border background-white">
        <input hidden asp-for="Pet.UserId"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pet.ChipId"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.ChipId" class="form-control" />
            </div>
            <span asp-validation-for="Pet.ChipId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pet.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.Name" class="form-control" />
            </div>
            <span asp-validation-for="Pet.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Pet.Breed"></label>
            </div>
            <div class=" col-5">
                <input asp-for="Pet.Breed" class="form-control" />
            </div>
            <span asp-validation-for="Pet.Breed" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="Pet.DateOfBirth"></label>
            </div>
            <div class=" col-5">
                <input asp-for="Pet.DateOfBirth" class="form-control" />
            </div>
            <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
