@page
@model HappyPaws.Pages.Pets.DeleteModel
@{ ViewData["Title"] = "Delete";
                Layout = "~/Pages/Shared/_Layout.cshtml"; }


<br />
<h2 class="text-info">Delete Pet</h2>
<br />
<form method="post">
    <div class=" border  backgroundWhite">
        <input type="hidden" asp-for="Pet.Id" />
        <input type="hidden" asp-for="Pet.Id" />
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Pet.ChipId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.ChipId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Pet.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Pet.Breed" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.Breed" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Pet.DateOfBirth" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pet.DateOfBirth" disabled class="form-control" />
            </div>
        </div>
 
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Pet.UserId" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
