@page
@model HappyPaws.Pages.MedicalServices.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create New</h2>
<br />
<form method="post">
    <div class="border background-white">
        <input type="hidden" asp-for="MedicalService.ID" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MedicalService.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="MedicalService.Name" class="form-control" />
            </div>
            <span asp-validation-for="MedicalService.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MedicalService.Description"></label>
            </div>
            <div class="col-5">
                <input asp-for="MedicalService.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class=" col-2">
                <label asp-for="MedicalService.Price"></label>
            </div>
            <div class=" col-5">
                <input asp-for="MedicalService.Price" class="form-control" />
            </div>
            <span asp-validation-for="MedicalService.Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
